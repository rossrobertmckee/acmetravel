      <div class="row">
       
        <div class="col-lg-12 text-center v-center">
          
          <h1>Let's go somewhere...</h1>
          <p class="lead">acmeTRAVEL finds your next getaway,<br />without you entering a destination...</p>
          
          <br><br><br>
          
          <!-- Trigger the modal with a button -->
        <button type="button" class="btn btn-info btn-lg"  data-toggle="modal" data-target="#searchModal">Give it a try!</button>

          <!-- Modal -->
        <div id="searchModal" class="modal fade" role="dialog">
          <div class="modal-dialog">

                <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h2 class="modal-title">A few quick questions...</h2>
          </div>
          <div class="modal-body">
            <%= form_tag search_flights_path do %>
            <%= label_tag "origin" %>
            <%= text_field_tag "search[origin]" %>
            <br />
            <%= label_tag "Max Price" %>
            <%= text_field_tag "search[maxfare]" %>
            <br />
            <br />
            <div class="bookingbox">
            <%= label_tag "Departure (YYYY-MM-DD)" %>
            <%= text_field_tag "search[departuredate]" %>
            <br />
            <%= label_tag "Return (YYYY-MM-DD)" %>
            <%= text_field_tag "search[returndate]" %><br />
            <b>OR</b>
            <br />
            <div class="container">
              <div class="row">
                  <div class='col-sm-2'>
                      <div class="form-group">
                        <label for="search[earliestdeparturedate]">Earliest you can leave:</label>
                          <div class='input-group date' id='datetimepicker1'>
                              <input type='text' class="form-control" name="search[earliestdeparturedate]" />
                              <span class="input-group-addon">
                                  <span class="glyphicon glyphicon-calendar"></span>
                              </span>
                          </div>
                      </div>
                  </div> 
                    <script type="text/javascript">
                        $(function () {
                            $('#datetimepicker1').datetimepicker({
                              format: 'YYYY-MM-DD'
                            });
                        });
                    </script>
                </div>
            </div>             

            <div class="container">
              <div class="row">
                  <div class='col-sm-2'>
                      <div class="form-group">
                        <label for="search[latestdeparturedate]">Latest you can leave:</label>
                          <div class='input-group date' id='datetimepicker2'>
                              <input type='text' class="form-control" name="search[latestdeparturedate]" />
                              <span class="input-group-addon">
                                  <span class="glyphicon glyphicon-calendar"></span>
                              </span>
                          </div>
                      </div>
                  </div> 
                    <script type="text/javascript">
                        $(function () {
                            $('#datetimepicker2').datetimepicker({
                              format: 'YYYY-MM-DD'
                            });
                        });
                    </script>
                </div>
            </div> 
            <br />
            <%= label_tag "Length of stay" %>
            <%= number_field_tag "search[lengthofstay]", min: 1, max: 16 %><br />
            </div>
            <br /><b>AND <em>most</em> importantly:</b><br />
            <%= label_tag "Type of Destination" %>
            <%= select_tag("search[theme]", options_for_select([['Beach', "beach"], ['Skiing', "skiing"], ['Tropical', "caribbean"], ['Nature Lover', "outdoors"], ['Gambling', "gambling"], ['Romantic', "romantic"], ['Surprise Me!', "shopping"], ['Rollercoasters!', "theme-park"]])) %>
            <br />
            </div>
          <div class="modal-footer">
          <%= submit_tag "Search", :class => 'btn btn-lg btn-primary' %>
          <% end %>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>

      </div>
    </div>
        </div>
        
